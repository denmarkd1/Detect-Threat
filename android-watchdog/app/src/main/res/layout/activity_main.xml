<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_console_gradient">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brand_bg_dark"
        android:elevation="0dp"
        app:title="@string/screen_title"
        app:titleCentered="true"
        app:titleTextColor="@color/text_primary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/brand_panel"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/brand_stroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:contentDescription="@string/lion_icon_description"
                        android:src="@drawable/lion_icon" />

                    <TextView
                        android:id="@+id/statusLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/status_ready"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/subStatusLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/substatus_default"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/updateStatusLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/update_status_idle"
                        android:textColor="@color/text_muted"
                        android:textSize="12sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@color/brand_panel_alt"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/brand_stroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:id="@+id/pricingTitleLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pricing_title"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pricingSummaryLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/pricing_loading"
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/pricingMarketLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/text_muted"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/pricingCompetitorLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/text_muted"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/pricingFeatureAccessLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/pricing_feature_access_loading"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/pricingFeedbackLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/pricing_feedback_missing"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/pricingManageButton"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/action_manage_plan"
                            android:textColor="@color/brand_accent" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/pricingFeedbackButton"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/action_rate_and_refer"
                            android:textColor="@color/brand_accent" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@color/brand_panel_alt"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/brand_stroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:id="@+id/readinessTitleLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/readiness_title"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/readinessSummaryLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/readiness_loading"
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/fixNotificationButton"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/action_fix_notifications"
                            android:textColor="@color/brand_accent" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/fixOverlayButton"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/action_fix_overlay"
                            android:textColor="@color/brand_accent" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@color/brand_panel_alt"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/brand_stroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/incident_title"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/incidentSummaryLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/incident_loading"
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/incidentDetailLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/text_muted"
                        android:textIsSelectable="true"
                        android:textSize="12sp"
                        android:typeface="monospace" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/incidentStartButton"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/action_incident_start"
                            android:textColor="@color/brand_accent" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/incidentResolveButton"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/action_incident_resolve"
                            android:textColor="@color/brand_accent" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/incidentReopenButton"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/action_incident_reopen"
                        android:textColor="@color/brand_accent" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/oneTimeScanButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/brand_accent"
                android:text="@string/action_one_time_scan"
                android:textColor="@color/brand_bg_dark"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_scan"
                app:iconGravity="textStart"
                app:iconTint="@color/brand_bg_dark" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/continuousScanButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/action_start_continuous"
                android:textColor="@color/brand_accent"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_shield"
                app:iconTint="@color/brand_accent"
                app:strokeColor="@color/brand_accent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/credentialCenterButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/action_open_credential_center"
                android:textColor="@color/text_primary"
                app:cornerRadius="12dp"
                app:strokeColor="@color/brand_stroke" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/checkUpdatesButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/action_check_updates"
                android:textColor="@color/text_primary"
                app:cornerRadius="12dp"
                app:strokeColor="@color/brand_stroke" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/refreshButton"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_refresh"
                    android:textColor="@color/brand_accent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/supportButton"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_support"
                    android:textColor="@color/brand_accent" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@color/brand_panel_alt"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/brand_stroke"
                app:strokeWidth="1dp">

                <TextView
                    android:id="@+id/resultText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:text="@string/result_placeholder"
                    android:textColor="@color/text_primary"
                    android:textIsSelectable="true"
                    android:textSize="13sp"
                    android:typeface="monospace" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/attributionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingBottom="16dp"
                android:text="@string/attribution"
                android:textColor="@color/text_muted"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
